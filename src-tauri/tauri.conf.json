{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "app.clip.pop.medroa",
  "productName": "Clip Pop Medroa",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "active": false,
    "resources": {
      "resources/locales": "."
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Clip Pop Medroa",
        "width": 420,
        "height": 260,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "fullscreen": false,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ]
  }
}
